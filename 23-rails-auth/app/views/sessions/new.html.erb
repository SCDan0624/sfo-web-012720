<h1>Log In</h1>


<% if flash[:errors] && flash[:errors].any? %>
  <% flash[:errors].each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>

<%= form_with(url: '/login') do |f| %>

  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit 'Log In!'%>

<% end %>