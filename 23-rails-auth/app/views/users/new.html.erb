<h1>Register</h1>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>


<%= form_for(@user) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.text_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>
  <%= f.submit %>
  
<% end %>